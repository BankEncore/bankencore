<%# Header %>
<div class="p-6">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-3xl font-bold">Party</h1>
    <div class="space-x-2">
      <%= link_to "Edit", edit_party_party_path(@party.public_id), class: "btn btn-primary btn-sm" %>
      <%= link_to "Delete", party_party_path(@party.public_id),
            data: { turbo_method: :delete, turbo_confirm: "Delete this party?" },
            class: "btn btn-soft btn-error btn-sm" %>
      <%= link_to "Back", party_parties_path, class: "btn btn-ghost btn-sm" %>
    </div>
  </div>
  <h1 class="text-2xl font-bold"><%= @party.display_name %></h1>
  <%# Core card %>
  <div class="card bg-base-100 shadow">
    <div class="card-body grid md:grid-cols-2 gap-4">
      <div>
        <div class="label"><span class="label-text">Customer #</span></div>
        <div class="font-mono"><%= @party.customer_number %></div>
      </div>
      <div>
        <div class="label"><span class="label-text">Public ID</span></div>
        <div class="font-mono"><%= @party.public_id %></div>
      </div>
      <div>
        <div class="label"><span class="label-text">Type</span></div>
        <div><%= @party.party_type %></div>
      </div>

      <%# Masked Tax ID with Reveal %>
      <div>
        <div class="label"><span class="label-text">Tax ID</span></div>
        <div
          data-controller="reveal"
          data-reveal-url-value="<%= reveal_tax_id_party_party_path(@party.public_id) %>"
          class="flex items-center gap-2"
        >
          <span data-reveal-target="text" class="font-mono"><%= mask_tax_id(@party.tax_id) %></span>
          <button class="btn btn-ghost btn-xs" data-reveal-target="button" data-action="reveal#reveal">Reveal</button>
          <span class="loading loading-spinner loading-xs hidden" data-reveal-target="spinner"></span>
        </div>
      </div>
    </div>
  </div>

  <%# Subprofile card %>
  <div class="card bg-base-100 shadow">
    <div class="card-body">
      <h2 class="card-title">Profile</h2>
      <% if @party.party_type == "person" %>
        <%= render "party/parties/person", party: @party %>
      <% elsif @party.party_type == "organization" %>
        <%= render "party/parties/organization", party: @party %>
      <% else %>
        <div class="text-sm opacity-70">No subprofile for type: <%= @party.party_type %></div>
      <% end %>
    </div>
  </div>

  <%# Emails list (masked, with per-row reveal) %>
  <div class="card bg-base-100 shadow">
    <div class="card-body">
      <h2 class="card-title">Emails</h2>
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr>
              <th>Type</th>
              <th>Email</th>
              <th>Primary</th>
            </tr>
          </thead>
          <tbody>
            <% @party.emails.order(is_primary: :desc, created_at: :asc).each do |e| %>
              <tr>
                <td><%= e.email_type&.name || e.email_type_code %></td>
                <td class="font-mono"><%= e.masked %></td>
                <td><%= e.is_primary? ? "Yes" : "No" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%# Phones %>
<div class="card bg-base-100 shadow">
  <div class="card-body">
    <h2 class="card-title">Phones</h2>
    <% if @party.phones.any? %>
      <div class="overflow-x-auto">
        <table class="table w-full">
          <thead>
            <tr>
              <th>Type</th>
              <th>Number</th>
              <th>Ext</th>
              <th>Primary</th>
              <th>SMS OK</th>
            </tr>
          </thead>
          <tbody>
            <% @party.phones.order(is_primary: :desc, created_at: :asc).each do |ph| %>
              <tr>
                <td><%= ph.phone_type&.name || ph.phone_type_code || "(Unspecified)" %></td>
                <td class="font-mono"><%= ph.phone_e164 %></td>
                <td><%= ph.phone_ext.presence || "â€”" %></td>
                <td><%= ph.is_primary? ? "Yes" : "No" %></td>
                <td><%= ph.consent_sms? ? "Yes" : "No" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="opacity-70">No phones</p>
    <% end %>
  </div>
</div>

<%# Addresses %>
<div class="card bg-base-100 shadow">
  <div class="card-body">
    <h2 class="card-title">Addresses</h2>
    <% if @party.addresses.any? %>
      <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
          <thead>
            <tr>
              <th>Type</th>
              <th>Street 1</th>
              <th>Street 2</th>
              <th>City</th>
              <th>Region</th>
              <th>Postcode</th>
              <th>Country</th>
            </tr>
          </thead>
          <tbody>
            <% @party.addresses.each do |a| %>
              <tr>
                <td>
                  <%= a.address_type&.name || "(Unspecified)" %>
                  <% if a.is_primary? %><span class="badge badge-sm ml-2">Primary</span><% end %>
                </td>
                <td><%= a.line1 %></td>
                <td><%= a.line2 %></td>
                <td><%= a.locality %></td>
                <td><%= a.region_code %></td>
                <td><%= a.postal_code %></td>
                <td><%= a.country&.name || a.country_code %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="opacity-70">No addresses</p>
    <% end %>
  </div>
</div>
