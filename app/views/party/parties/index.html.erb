<%# Tailwind + DaisyUI list %>
  <% if @parties.blank? %>
  <%= render "shared/empty_state",
      title: "No parties found",
      subtitle: "Search by name, email, or customer #.",
      cta: link_to("New Party", new_party_party_path, class: "btn btn-primary btn-sm") %>
  <% else %>
  <div class="overflow-x-auto">
    <table class="table table-zebra">
      <thead>
        <tr>
          <th>Party Name</th>
          <th>Customer #
          <th>Public ID</th>
          <th>Type</th>
          <th>Created</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @parties.each do |p| %>
          <tr>
            <td class="font-semibold"><%= p.display_name %></td>
            <td class="font-mono"><%= p.customer_number %></td>
            <td class="font-mono"><%= p.public_id %></td>
            <td><%= p.party_type %></td>
            <td><%= l(p.created_at, format: :short) %></td>
            <td>
              <%= link_to "View", party_party_path(p.public_id), class: "btn btn-xs btn-neutral" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>