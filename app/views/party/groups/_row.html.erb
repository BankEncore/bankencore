<%# locals: membership: %>
<tr>
  <td class="font-mono"><%= membership.role_code || "member" %></td>
  <td><%= link_to membership.party.display_name, party_party_path(membership.party) %></td>
  <td class="text-right">
    <%= button_to "Remove",
          party_group_group_membership_path(membership.group, membership),
          method: :delete, class:"btn btn-ghost btn-xs",
          data:{ turbo_confirm:"Remove member?" } %>
  </td>
</tr>
