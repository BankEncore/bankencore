<!-- app/views/party/groups/edit.html.erb -->
<turbo-frame id="comm_modal_frame">
  <dialog open class="modal modal-open">
    <div class="modal-box w-[92vw] max-w-lg">
      <h3 class="font-semibold mb-3">Rename group</h3>

      <%= form_with model: @group,
            scope: :party_group,
            url: party_group_path(@group),
            method: :patch,
            data: { turbo_frame: "comm_modal_frame" } do |f| %>

        <div class="form-control">
          <%= f.label :name, "Name", class: "label" %>
          <%= f.text_field :name, class: "input input-bordered w-full", required: true %>
        </div>

        <div class="modal-action mt-6">
          <button type="button" class="btn btn-ghost" data-action="click->modal#close">Cancel</button>
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <form method="dialog" class="modal-backdrop"><button aria-label="Close"></button></form>
  </dialog>
</turbo-frame>
