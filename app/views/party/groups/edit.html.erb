<turbo-frame id="comm_modal_frame">
  <div class="modal-overlay">
    <div class="modal-panel bg-base-100 shadow-xl">
      <div class="p-6 space-y-4">
        <h3 class="font-semibold">Rename household</h3>

        <%= form_with model: @group,
              url: party_group_path(@group),
              method: :patch do |f| %>

          <div class="flex flex-col gap-2">
            <label class="label" for="group_name">Household name</label>
            <%= f.text_field :name, id: "group_name",
                  class: "input input-bordered w-full", autofocus: true %>
          </div>

          <div class="mt-6 flex justify-end gap-2">
            <button type="button" class="btn btn-ghost" data-action="click->modal#close">Cancel</button>
            <%= f.submit "Save", class: "btn btn-primary", data: { disable_with: "Savingâ€¦" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>
